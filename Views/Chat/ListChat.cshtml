@using SimpleSocialApp.Data.Enums
@using SimpleSocialApp.Data.Models
@using SimpleSocialApp.Models.ViewModels.Chats
@model List<ChatViewModel>

@if(Model.Count!=0)
{ 
    @foreach (var item in Model)
    {
        <p>@item.ChatId</p>
        <div class="chat-list-item">
            @if(item.Type == ChatType.Group)
            {
                <h3>@item.Title</h3>
            }
            else if(item.Type == ChatType.Private)
            {
                <h3>@item.FriendName</h3>
            }
            <a asp-action="Index" asp-controller="Chat" asp-route-chatId="@item.ChatId" class="btn btn-primary">Go To Chat</a>
            }
        </div>
    }
    
}
else
{
   <h3>You participate in no chats yet!</h3> 
}
<a asp-action="Create" asp-controller="Chat"> Create a new chat</a>


