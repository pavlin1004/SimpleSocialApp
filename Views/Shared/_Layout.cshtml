@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/layout.css"></link>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <title>@ViewData["Title"] - SimpleSocialApp</title>
</head>
<body>
    <header>
        <nav id="main-navbar" class="navbar navbar-expand-lg navbar-light fixed-top">
            <div class="container-fluid">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">SimpleSocialApp</a>
                <div>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="container pt-5 mt-4">
                <div class="row justify-content-center">
                    <div class="col-md-2 position-fixed start-0">
                        @await Html.PartialAsync("_Navbar")
                    </div>
                    <div class="col-md-1"></div>
                    <main class="main-container col-md-6">
                        @RenderBody()
                    </main>
                    <div class="col-md-1"></div>
                    <div class="col-md-2 position-fixed end-0">
                        @await Component.InvokeAsync("ListChats")
                    </div>
                </div>
            </div>
        }
        else
        {
            <div>
                <main>
                    @RenderBody()
                </main>
            </div>
        }
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
