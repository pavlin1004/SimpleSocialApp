@using System.Security.Claims
<!-- Sidebar Navbar -->
<div id="sidenav-1" class="sidenav" data-mdb-sidenav-init data-mdb-color="dark" role="navigation" data-mdb-hidden="false"
     data-mdb-accordion="true">
    <form class="d-none d-md-flex justify-content-center mx-auto input-group w-auto my-auto" method="get" asp-action="SearchUsers" asp-controller="User">
        <input class="form-control" type="search" name="searchQuery" placeholder="Search users" aria-label="Search">
    </form>
    <ul class ="sidenav-menu">
        <li class="sidenav-item">
            <a class="nav-link fas fa-history fa-fw me-3" asp-action="Index" asp-controller="Home">
                <i class="fas fa-home fa-fw me-3"><span>Home</span></i>
            </a>
        </li>
        <li class="sidenav-item">
            <a class="nav-link fas fa-history fa-fw me-3" asp-area="" asp-controller="User" asp-action="Profile" asp-route-userId="@User.FindFirstValue(ClaimTypes.NameIdentifier)">
                <i class="fas fa-home fa-fw me-3"><span>Profile</span></i>
            </a>
        </li>
        <li class="sidenav-item active">
            <a class="nav-link fas fa-history fa-fw me-3" asp-area="" asp-controller="Chat" asp-action="ListChat">
                <i class="fas fa-home fa-fw me-3"><span>Chats</span></i>
            </a>
        </li>
    </ul>
</div>

